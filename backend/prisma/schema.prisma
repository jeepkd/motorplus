// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  email        String? @unique
  username     String  @unique
  passwordHash String  @default(dbgenerated())
}

model Bike {
  id          Int       @id @default(autoincrement())
  bikeBrand   BikeBrand @relation(fields: [bikeBrandId], references: [id])
  bikeBrandId Int
  bikeModel   BikeModel @relation(fields: [bikeModelId], references: [id])
  bikeModelId Int
  bikeColor   BikeColor @relation(fields: [bikeColorId], references: [id])
  bikeColorId Int
}

model BikeBrand {
  id   Int    @id @default(autoincrement())
  bike Bike[]
}

model BikeModel {
  id    Int    @id @default(autoincrement())
  model String
  bike  Bike[]
}

model BikeColor {
  id    Int    @id @default(autoincrement())
  color String
  bike  Bike[]
}
